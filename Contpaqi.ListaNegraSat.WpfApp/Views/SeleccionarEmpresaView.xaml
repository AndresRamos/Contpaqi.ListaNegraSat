<UserControl x:Class="Contpaqi.ListaNegraSat.WpfApp.Views.SeleccionarEmpresaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             xmlns:viewModels="clr-namespace:Contpaqi.ListaNegraSat.WpfApp.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Contpaqi.ListaNegraSat.WpfApp.Views"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewModels:SeleccionarEmpresaViewModel}"
             dialog:DialogParticipation.Register="{Binding}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Filtro:" FontWeight="Bold" Margin="5" VerticalAlignment="Center" />
            <TextBox Grid.Column="1" Text="" VerticalContentAlignment="Center" Margin="5"
                     mah:TextBoxHelper.ClearTextButton="True" />
        </Grid>
        <ListView Grid.Row="1"
                  ItemsSource="{Binding EmpresasCollectionView}"
                  SelectedItem="{Binding EmpresaSeleccionada}"
                  DisplayMemberPath="Nombre"
                  Margin="5" />
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal">
            <Button Content="Seleccionar"
                    Command="{Binding SeleccionarEmpresaCommand}"
                    Width="200"
                    Margin="5"
                    Style="{StaticResource AccentedSquareButtonStyle}" />
            <Button Content="Cancelar"
                    Command="{Binding CancelarCommand}"
                    Width="200"
                    Margin="5"
                    Style="{StaticResource SquareButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>